{{#each contacts}}
  <div class="nw-bg-white nw-rounded-xl nw-shadow-lg nw-p-8 nw-border nw-border-gray-200 hover:nw-shadow-xl nw-transition-shadow nw-duration-300 hover-lift fade-in" style="animation-play-state: running;" role="listitem">
    <div class="nw-flex nw-items-start nw-space-x-4">
      <div class="nw-w-8 nw-h-8 nw-flex nw-items-center nw-justify-center nw-flex-shrink-0 scale-in" aria-hidden="true" style="animation-play-state: running;">
        {{{icon}}}
      </div>
      <div class="nw-flex-1">
        <h3 class="nw-text-xl nw-font-bold nw-text-gray-900 nw-mb-2">
          {{type}}
        </h3>
        <p class="nw-text-gray-600 nw-mb-4">
          {{description}}
        </p>
        <a href="{{href}}" class="nw-text-hk-blue-300 hover:nw-text-blue-700 nw-font-semibold nw-transition-colors nw-duration-300">
          {{display}}
        </a>
      </div>
    </div>
  </div>
{{/each}}