<div class="nw-py-8 nw-px-4 md:nw-px-7 nw-bg-white nw-mx-auto slider meldungen-slider " style="max-width:1024px;">
  <div class="nw-inline nw-text-xl nw-uppercase nw-font-bold">
    GASTRO-NEWS BIELEFELD
  </div>
  <hr class=" nw-red-line-l nw-mt-0.5 nw-mb-2">
  <!--Mobile -->
  <article class="nw-relative nw-bg-white nw-pt-6 nw-pb-4 md:nw-hidden">
    <a>
      <figure class="nw-aspect-w-16 nw-aspect-h-9">
        <img
          src="/images/artikel-teaser.jpg"
          class="nw-object-cover nw-w-full nw-h-full"
          alt="Mobile-Bild"
        />
      </figure>

      <div class="nw-bg-[#F2F5F9] nw--mt-6 nw-mx-4 nw-p-4 nw-z-50 nw-relative nw-rounded-md">
        <p class="nw-plus-icon-l nw-text-gray-600 nw-text-base nw-font-medium nw-pb-3">
          Dollar Sand connar
        </p>
        <p class="nw-text-lg nw-font-bold nw-pb-2.5">
          Campingwagen geht in Flammen auf: Bielefelder Zapfer sucht neue Bleibe in Bielefeld
        </p>
        <p class="nw-text-base nw-font-medium nw-text-gray-400">
          Campingwagen geht in Flammen auf: Bielefelder Zapfer sucht neue Bleibe in Bielefeld
        </p>
      </div>
    </a>
  </article>

  <!-- Desktop -->
  <article class="nw-pt-6 nw-pb-8 nw-hidden md:nw-flex">
    <a class=" nw-flex nw-flex-row nw-gap-6  nw-justify-center nw-items-center ">
    <figure class="nw-w-1/2 " style="width: 492px; height: 306px;">
      <img src="/images/artikel-teaser.jpg" alt="DEsktop-Bild"
           class="nw-w-full nw-h-full nw-rounded-md nw-object-cover">
    </figure>
    <div class="nw-w-1/2 nw-px-6">
      <p class="nw-plus-icon-s nw-text-gray-600 nw-text-md nw-font-medium nw-mb-3">
        Dollar Sand connar
      </p>
      <p class="nw-text-xl nw-font-bold nw-pb-2.5">
        Campingwagen geht in Flammen auf: Bielefelder Zapfer sucht neue Bleibe in Bielefeld
      </p>
      <p class="nw-text-base nw-text-gray-400 nw-font-medium">
        Campingwagen geht in Flammen auf: Bielefelder Zapfer sucht neue Bleibe in Bielefeld
      </p>
    </div>
    </a>
  </article>
  <div class="embla embla--main-carousel">
    <div class="embla__viewport relative">
      <div class="embla__container ">
        {{#each artikel}}
          <!-- -->
          <div
            class="
            embla__slide
           md:nw-min-w-[312px] nw-flex nw-items-center
          "
          >
            <div class="nw-flex nw-flex-col nw-gap-4 nw-p-4 nw-rounded-md nw-bg-white nw-border nw-border-gray-100">
              <div>
                <p class="nw-text-xs nw-font-medium nw-text-gray-600">
                  {{this.heading}}
                </p>
                <p class="nw-text-base nw-font-bold nw-line-clamp-2">
                  {{this.title}}
                </p>
              </div>
              {{>@artikel-content-icons}}
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="nw-px-3 nw-pt-7">
    <a href="#" class="nw-group nw-text-base nw-text-red-0 hover:nw-text-red-100 focus:nw-text-red-200 nw-font-bold nw-flex nw-justify-center nw-items-center nw-place-items-center nw-content-center nw-place-content-center nw-space-x-1 nw-transition-all
          nw-duration-200 nw-ease-in-out focus:nw-outline-none focus:nw-ring-2 focus:nw-ring-gray-500">
      <span>Weitere Meldungen</span>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="nw-h-5 nw-w-5">
        <path fill-rule="evenodd"
              d="M2 10a.75.75 0 0 1 .75-.75h12.59l-2.1-1.95a.75.75 0 1 1 1.02-1.1l3.5 3.25a.75.75 0 0 1 0 1.1l-3.5 3.25a.75.75 0 1 1-1.02-1.1l2.1-1.95H2.75A.75.75 0 0 1 2 10Z"
              clip-rule="evenodd"></path>
      </svg>
    </a>
  </div>
</div>

