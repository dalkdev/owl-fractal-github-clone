<style>
  /* Custom animations for the playground */
  @keyframes slideInRight {
    from {
      transform: translateX(100%);
      opacity: 0;
    }

    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes bounceIn {
    0% {
      transform: scale(0);
      opacity: 0;
    }

    50% {
      transform: scale(1.1);
      opacity: 1;
    }

    100% {
      transform: scale(1);
      opacity: 1;
    }
  }

  @keyframes typewriter {
    from {
      width: 0;
    }

    to {
      width: 100%;
    }
  }

  .animate-slide-in-right {
    animation: slideInRight 0.5s ease-out forwards;
  }

  .animate-bounce-in {
    animation: bounceIn 0.6s ease-out forwards;
  }

  .animate-typewriter {
    overflow: hidden;
    border-right: 2px solid #3B82F6;
    white-space: nowrap;
    animation: typewriter 3s steps(40) 1s forwards;
  }

  /* 3D flip effect */
  .group:hover .nw-rotate-y-180 {
    transform: rotateY(180deg);
  }

  .group:hover .nw-rotate-y-0 {
    transform: rotateY(0deg);
  }

  .nw-rotate-y-180 {
    transform: rotateY(180deg);
  }

  .nw-rotate-y-0 {
    transform: rotateY(0deg);
  }

  /* Perspective for 3D effects */
  .group {
    perspective: 1000px;
  }

  .group>div {
    backface-visibility: hidden;
  }
</style>

<script>
  // Notification triggers
  function triggerNotifications() {
    const slideNotification = document.getElementById('slide-notification');
    const fadeNotification = document.getElementById('fade-notification');
    const bounceNotification = document.getElementById('bounce-notification');
    // Reset animations
    slideNotification.classList.add('nw-translate-x-full');
    fadeNotification.classList.add('nw-opacity-0');
    bounceNotification.classList.add('nw-scale-0');
    // Trigger animations with delays
    setTimeout(() => {
      slideNotification.classList.remove('nw-translate-x-full');
      slideNotification.classList.add('nw-translate-x-0');
    }, 100);
    setTimeout(() => {
      fadeNotification.classList.remove('nw-opacity-0');
      fadeNotification.classList.add('nw-opacity-100');
    }, 600);
    setTimeout(() => {
      bounceNotification.classList.remove('nw-scale-0');
      bounceNotification.classList.add('nw-scale-100');
    }, 1100);
    // Reset after 3 seconds
    setTimeout(() => {
      slideNotification.classList.add('nw-translate-x-full');
      slideNotification.classList.remove('nw-translate-x-0');
      fadeNotification.classList.add('nw-opacity-0');
      fadeNotification.classList.remove('nw-opacity-100');
      bounceNotification.classList.add('nw-scale-0');
      bounceNotification.classList.remove('nw-scale-100');
    }, 4000);
  }
  // Text animation triggers
  function triggerTextAnimations() {
    const typewriterText = document.getElementById('typewriter');
    const fadeText = document.getElementById('fade-text');
    const slideText = document.getElementById('slide-text');
    // Reset animations
    typewriterText.textContent = '';
    typewriterText.classList.remove('animate-typewriter');
    fadeText.classList.add('nw-opacity-0');
    slideText.classList.add('nw-translate-y-full');
    // Typewriter effect
    const text = 'Design System Animations';
    let i = 0;
    const typeInterval = setInterval(() => {
      typewriterText.textContent += text.charAt(i);
      i++;
      if (i >= text.length) {
        clearInterval(typeInterval);
      }
    }, 100);
    // Fade in text
    setTimeout(() => {
      fadeText.classList.remove('nw-opacity-0');
      fadeText.classList.add('nw-opacity-100');
    }, 1000);
    // Slide up text
    setTimeout(() => {
      slideText.classList.remove('nw-translate-y-full');
      slideText.classList.add('nw-translate-y-0');
    }, 1500);
  }
  // Auto-trigger some animations on load
  document.addEventListener('DOMContentLoaded', function() {
    // Auto-start typewriter after a delay
    setTimeout(() => {
      triggerTextAnimations();
    }, 2000);
  });
  // Loading button interaction
  document.addEventListener('DOMContentLoaded', function() {
    const loadingButtons = document.querySelectorAll('button');
    loadingButtons.forEach(button => {
      if (button.textContent.includes('Loading Button')) {
        button.addEventListener('click', function() {
          const spinner = button.querySelector('#loading-spinner');
          const text = button.querySelector('span:last-child');
          if (spinner && text) {
            spinner.classList.remove('nw-hidden');
            text.textContent = 'Loading...';
            button.disabled = true;
            setTimeout(() => {
              spinner.classList.add('nw-hidden');
              text.textContent = 'Loading Button';
              button.disabled = false;
            }, 2000);
          }
        });
      }
    });
  });
</script>