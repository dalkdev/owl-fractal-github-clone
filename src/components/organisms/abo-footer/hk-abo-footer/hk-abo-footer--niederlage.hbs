<script>
  function toggleFooter() {
    const expandedText = document.getElementById('footerExpanded');
    const arrow = document.querySelector('#toggleArrow svg');
    const toggleButton = document.getElementById('toggleArrow');

    const isHidden = expandedText.classList.contains('nw-hidden');
    expandedText.classList.toggle('nw-hidden');
    arrow.classList.toggle('nw-rotate-180');
    toggleButton.setAttribute('aria-expanded', isHidden);
  }

  function closeFooter() {
    const footer = document.getElementById('abo-footer');
    if (footer) {
      localStorage.setItem('abofooterClosed', 'true');
      footer.classList.add('nw-hidden');
    }
  }

  document.addEventListener('DOMContentLoaded', function () {
    const footer = document.getElementById('abo-footer');
    const aboFooterClosed = localStorage.getItem('abofooterClosed');
    console.log('Footer :', aboFooterClosed);


    if ((aboFooterClosed === null || aboFooterClosed === "false")) {
      footer.classList.remove('nw-hidden');
      _paq.push(["trackEvent", "footer-widget", "view", "Abofooter", {{ returnId }}]);
    }
  });

</script>
