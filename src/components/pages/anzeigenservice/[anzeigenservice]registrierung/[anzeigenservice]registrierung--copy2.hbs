<script>
    function checkFunction() {
        var checkBox1 = document.getElementById('checkCondition1');
        var checkBox2 = document.getElementById('checkCondition2');
        var bRegister = document.getElementById('registerButton');

        if (
            checkBox1.checked == true &&
            (checkBox2.checked == true || checkBox2.checked == false)
        ) {
            bRegister.disabled = false;
            bRegister.style.backgroundColor = '#D20A11';
        } else {
            bRegister.disabled = true;
            bRegister.style.backgroundColor = '#E1B9BA';
        }
    }

    var answerInput = document.getElementById('answer');
    var registerButton = document.getElementById('registerButton');

    var number1 = Math.floor(Math.random() * 10) + 1;
    var number2 = Math.floor(Math.random() * 10) + 1;
    var sumOfTheNumbers = number1 + number2;
    var questionLabel = document.querySelector('label[for="answer"]');
    questionLabel.innerHTML = "<span class='nw-text-gray-500 nw-taxt-base nw-font-bold' >Sicherheitsabfrage </span> <span class='nw-text-red-500'>*</span>  " + number1 + " + " + number2 + " = ";

    answerInput.addEventListener('input', checkSecurityAnswer);

    function checkSecurityAnswer() {
        var securityAnswer = parseInt(answerInput.value);

        if (securityAnswer === sumOfTheNumbers) {
            registerButton.disabled = false;
        } else {
            registerButton.disabled = true;
        }
    }

    function onClickRegistrieren() {
        var valid = Validator();
        var securityAnswer = parseInt(answerInput.value);

        if (valid && securityAnswer === sumOfTheNumbers) {
            alert('ok');
        }
    }

    let array_input = document.getElementsByClassName('nw-formfield');

    function Validator() {
        var valid = true;
        Array.prototype.forEach.call(array_input, x => {
            if (x.value == '') {
                valid = false;
                x.classList.add('nw-border-red-500');
                x.nextElementSibling.style.display = 'block';
            } else {
                x.classList.remove('nw-border-red-500');
                x.nextElementSibling.style.display = 'none';
            }
        });
        return valid;
    }

    Array.prototype.forEach.call(array_input, x => {
        x.onclick = function () {
            x.classList.remove('nw-border-red-500');
            x.nextElementSibling.style.display = 'none';
        };
    });
