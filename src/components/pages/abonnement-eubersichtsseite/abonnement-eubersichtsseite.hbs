    // Specific E-Paper recommendations
    if (importance === 'epaper_only') {
      return 'epaper';
    }
    if (reading === 'digital' && layout === 'very_important') {
      return 'epaper';
    }
    if (reading === 'print' && timing === 'morning' && layout === 'very_important') {
      return 'print';
    }
    if (reading === 'both' && price === 'good_package' && importance === 'everything') {
      return 'premium';
    }
    if (importance === 'digital_device' && price === 'comfort_tech') {
      return 'bundle';
    }
    // E-Paper specific combinations
    if (reading === 'digital' && timing === 'evening' && layout === 'very_important') {
      return 'epaper';
    }
    if (reading === 'digital' && timing === 'morning' && layout === 'very_important') {
      return 'epaper';
    }
    // Default fallback logic
    if (reading === 'digital') {
      return layout === 'very_important' ? 'epaper' : 'webabo';
    }
    if (reading === 'print') {
      return 'print';
    }
    if (reading === 'both') {
      return price === 'cheapest' ? 'webabo' : 'premium';
    }
    return 'webabo';
  }

