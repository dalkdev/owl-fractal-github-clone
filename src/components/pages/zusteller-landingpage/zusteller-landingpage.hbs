    // Language switching functionality
    class LanguageSwitcher {
      constructor() {
        this.currentLanguage = localStorage.getItem('nw_language') || 'de';
        this.init();
      }

      init() {
        this.createLanguageSwitcher();
        this.setupEventListeners();
        this.applyTranslations(this.currentLanguage);
        this.updateLanguageSwitcher();
      }

      createLanguageSwitcher() {
        // Remove existing language switcher if present
        const existing = document.querySelector('.language-switcher-container');
        if (existing) {
          existing.remove();
        }

        // Create language switcher
        const switcher = document.createElement('div');
        switcher.className = 'language-switcher-container';
        switcher.innerHTML = `
            <div class="language-switcher">
                <div class="language-options">
                    <span class="language-label" data-i18n="language_label">Sprache</span>
                    <a href="#" class="language-link" data-lang="de">DE</a>
                    <span class="divider">|</span>
                    <a href="#" class="language-link" data-lang="en">EN</a>
                </div>
            </div>
        `;

        // Insert at the top of the page
        const hero = document.querySelector('section[role="banner"]');
        if (hero) {
          hero.insertBefore(switcher, hero.firstChild);
        } else {
          document.body.insertBefore(switcher, document.body.firstChild);
        }
      }

      setupEventListeners() {
        document.addEventListener('click', (e) => {
          if (e.target.classList.contains('language-link')) {
            e.preventDefault();
            const lang = e.target.getAttribute('data-lang');
            this.changeLanguage(lang);
          }
        });
      }

      changeLanguage(language) {
        if (language === this.currentLanguage) return;

        this.currentLanguage = language;
        localStorage.setItem('nw_language', language);

        // Update document language
        document.documentElement.lang = language;

        // Apply translations
        this.applyTranslations(language);
        this.updateLanguageSwitcher();

        // Smooth transition effect
        document.body.style.opacity = '0.9';
        setTimeout(() => {
          document.body.style.opacity = '1';
        }, 150);
      }

      applyTranslations(language) {
        const t = translations[language];
        if (!t) return;

        // Apply translations to all elements with data-i18n attribute
        document.querySelectorAll('[data-i18n]').forEach(element => {
          const key = element.getAttribute('data-i18n');
          if (t[key]) {
            // Handle different element types
            if (element.tagName === 'INPUT') {
              if (element.type === 'submit' || element.type === 'button') {
                element.value = t[key];
              } else {
                element.placeholder = t[key];
              }
            } else if (element.tagName === 'IMG') {
              element.alt = t[key];
            } else {
              element.textContent = t[key];
            }
          }
        });

        // Handle images with data-i18n-alt attribute
        document.querySelectorAll('[data-i18n-alt]').forEach(element => {
          const key = element.getAttribute('data-i18n-alt');
          if (t[key] && element.tagName === 'IMG') {
            element.alt = t[key];
          }
        });

        // Update form validation if validation system exists
        if (window.updateValidationMessages) {
          window.updateValidationMessages(language);
        }
      }

      updateLanguageSwitcher() {
        const links = document.querySelectorAll('.language-link');
        links.forEach(link => {
          const lang = link.getAttribute('data-lang');
          if (lang === this.currentLanguage) {
            link.classList.add('active');
          } else {
            link.classList.remove('active');
          }
        });
      }

      getCurrentLanguage() {
        return this.currentLanguage;
      }

      getTranslation(key) {
        return translations[this.currentLanguage][key] || key;
      }
    }

    // Initialize language switcher when DOM is ready
    document.addEventListener('DOMContentLoaded', function() {
      window.languageSwitcher = new LanguageSwitcher();
    });

    // Export for use in other scripts
    if (typeof module !== 'undefined' && module.exports) {
      module.exports = { translations, LanguageSwitcher };
