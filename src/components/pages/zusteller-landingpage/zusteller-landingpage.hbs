    border-color: #e11c22;
    box-shadow: 0 0 0 3px rgba(225, 28, 34, 0.25);
  }

  /* Subtile Hover-Effekte für interaktive Elemente */
  a, button {
    transition: all 0.2s ease-in-out;
  }

  a:hover {
    color: #e11c22;
    text-decoration: underline;
  }


  /* Bildoptimierung und Lazy Loading */
  img {
    transition: opacity 0.5s ease, filter 0.5s ease;
  }

  img:not([loading="eager"]) {
    opacity: 0;
    filter: blur(5px);
  }

  img.loaded, img[loading="eager"] {
    opacity: 1;
    filter: blur(0);
  }

  /* Verbesserte Seitenleistung */
  .content-visibility-auto {
    content-visibility: auto;
    contain-intrinsic-size: 0 500px;
  }

  /* Animationen für Seitenladung */
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes scaleIn {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* Animation-Klassen */
  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
  }

  .animate-slide-up {
    animation: slideUp 0.6s ease-out forwards;
  }

  .animate-slide-in-right {
    animation: slideInRight 0.6s ease-out forwards;
  }

  .animate-scale-in {
