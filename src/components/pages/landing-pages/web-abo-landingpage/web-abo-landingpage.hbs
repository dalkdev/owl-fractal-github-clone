<script>
  /**
   * Pricing Toggle Functionality
   * Handles switching between monthly and yearly pricing
   */

  // No static data needed - using data attributes from HTML

  /**
   * Toggle between monthly and yearly pricing for specific card
   */
  function togglePricing(cardIndex) {
    const toggle = document.getElementById(`pricing-toggle-${cardIndex}`);
    const isYearly = toggle.checked;

    // Update toggle styling
    const dot = toggle.parentElement.querySelector('.nw-dot');
    const track = dot.parentElement.querySelector('div');

    if (isYearly) {
      dot.style.transform = 'translateX(20px)';
      track.classList.remove('nw-bg-gray-300');
      track.classList.add('nw-bg-purple-500');
    } else {
      dot.style.transform = 'translateX(0)';
      track.classList.remove('nw-bg-purple-500');
      track.classList.add('nw-bg-gray-300');
    }

    // Update only the specific pricing card
    updateCard(cardIndex.toString(), isYearly);

    // Track analytics
    if (window.gtag) {
      gtag('event', 'pricing_toggle', {
        'event_category': 'engagement',
        'event_label': isYearly ? 'yearly' : 'monthly',
        'card_index': cardIndex
      });
    }
  }

  /**
   * Update pricing card content (only used for individual cards now)
   */
  function updatePricingCards(isYearly) {
    // This function is now unused - we update cards individually
  }

  /**
   * Update individual pricing card
   */
  function updateCard(planId, isYearly) {
    const card = document.querySelector(`[data-plan="${planId}"]`);
    if (!card) return;

    const prefix = isYearly ? 'yearly' : 'monthly';

    // Update price
    const priceElement = card.querySelector('.pricing-amount');
    if (priceElement) {
      const price = card.dataset[`${prefix}Price`];
      if (price) priceElement.textContent = price;
    }

    // Update period
    const periodElement = card.querySelector('.pricing-period');
    if (periodElement) {
      const period = card.dataset[`${prefix}Period`];
      if (period) periodElement.textContent = period;
    }

    // Update card title
    const titleElement = card.querySelector('h3');
    if (titleElement) {
      const name = card.dataset[`${prefix}Name`];
      if (name) titleElement.textContent = name;
    }

    // Update original price if exists
    const originalPriceElement = card.querySelector('.pricing-original');
    if (originalPriceElement) {
      const originalPrice = card.dataset[`${prefix}Original`];
      if (originalPrice) {
        originalPriceElement.textContent = originalPrice;
        originalPriceElement.style.display = 'inline';
      } else {
        originalPriceElement.style.display = 'none';
      }
    }

    // Update discount if exists
    const discountElement = card.querySelector('.pricing-discount');
    if (discountElement) {
      const discount = card.dataset[`${prefix}Discount`];
      if (discount) {
        discountElement.textContent = discount;
        discountElement.style.display = 'inline';
      } else {
        discountElement.style.display = 'none';
      }
    }

    // Update notice
    const noticeElement = card.querySelector('.pricing-notice');
    if (noticeElement) {
      const notice = card.dataset[`${prefix}Notice`];
      if (notice) noticeElement.textContent = notice;
    }

    // Toggle features
    const monthlyFeatures = card.querySelector('.pricing-features-monthly');
    const yearlyFeatures = card.querySelector('.pricing-features-yearly');

    if (isYearly) {
      // Show yearly features, hide monthly
      if (monthlyFeatures) monthlyFeatures.classList.add('nw-hidden');
      if (yearlyFeatures) yearlyFeatures.classList.remove('nw-hidden');
    } else {
      // Show monthly features, hide yearly
      if (monthlyFeatures) monthlyFeatures.classList.remove('nw-hidden');
      if (yearlyFeatures) yearlyFeatures.classList.add('nw-hidden');
    }

    // Update badge if exists
    const badgeElement = card.querySelector('.pricing-badge');
    if (badgeElement) {
      const badge = card.dataset[`${prefix}Badge`];
      if (badge) {
        badgeElement.textContent = badge;
      }
    }

    // Toggle expandable info for yearly
    const expandableInfoYearly = card.querySelector('.expandable-info-yearly');
    if (expandableInfoYearly) {
      if (isYearly) {
        expandableInfoYearly.classList.remove('nw-hidden');
      } else {
        expandableInfoYearly.classList.add('nw-hidden');
      }
    }
    // Toggle CTA buttons (Monatsabo vs Jahresabo)
    const monthlyBtn = card.querySelector('.pricing-button');
    const yearlyBtn = card.querySelector('.pricing-button-yearly');

    if (isYearly) {
      if (monthlyBtn) monthlyBtn.classList.add('nw-hidden');
      if (yearlyBtn) yearlyBtn.classList.remove('nw-hidden');
    } else {
      if (monthlyBtn) monthlyBtn.classList.remove('nw-hidden');
      if (yearlyBtn) yearlyBtn.classList.add('nw-hidden');
    }
    // Update toggle switch appearance
    updateToggleSwitch(card, isYearly);
  }

