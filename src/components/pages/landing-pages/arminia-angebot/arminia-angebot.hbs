<div class="nw-p-4 nw-bg-white">
    <div class="nw-flex nw-flex-col lg:nw-flex-row nw-justify-between">
        <div>
            <div class="nw-flex">
                <img class="nw-w-12" src="/images/nw-plus_icon.svg" alt=""/>
                <p class="nw-px-1 nw-text-md nw-font-bold">Arminia-Special</p>
            </div>
            <p class="nw-text-2xl nw-font-bold nw-text-red-500">
                für nur 69 € im 1. Jahr*
            </p>
            <p class="nw-line-through nw-leading-9 nw-text-md">statt 118,90 €</p>
            <p class="nw-text-md nw-font-bold nw-leading-loose">
                Mit NW+ am Ball bleiben
            </p>
            <div>
                {{#each this.elements}}
                    <div class="nw-flex nw-py-1">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="20"
                            height="20"
                            class="nw-mr-1 nw-text-gray-400"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                            />
                        </svg>
                        <span class="nw-text-base"> {{this.caption}} </span>
                    </div>
                {{/each}}
            </div>
            <form action="" id="">
                <input
                    class="
            nw-mt-2 nw-uppercase nw-p-1 nw-text-sm nw-border nw-border-black
          "
                    type="text"
                    name=""
                    required
                    placeholder="Gutscheinecode"
                />
                <div>
                    <button
                        type="submit"
                        class="
              nw-uppercase
              nw-inline-flex
              nw-mt-4
              nw-bg-red-500
              nw-border
              nw-border-transparent
              nw-py-1
              nw-px-4
              nw-justify-center nw-items-center
              nw-text-sm
              nw-text-white
              hover:nw-border
              hover:nw-border-red-500
              hover:nw-bg-white
              hover:nw-text-red-500
              focus:nw-outline-none
              focus:nw-ring-2
              focus:nw-ring-offset-2
              focus:nw-ring-offset-gray-800
              focus:nw-ring-indigo-500
            "
                    >
                        Jetzt sparen
                    </button>
                </div>
            </form>
            <p class="nw-text-gray-500 nw-leading-5 nw-text-xs nw-py-4">
                *Die Mindestvertragslaufzeit für dieses preisreduzierte Angebot beträgt
                12 Monate. Anschließend nutzen Sie es für jährlich 99,00 € Euro weiter.
                Das Angebot ist jährlich kündbar.
            </p>
        </div>
        <img class="" src="/images/arminia-angebot/img-arminia-header.jpg"/>
    </div>
    <div class="nw-mt-4 nw-bg-gray-100">
        <p
            class="
        nw-text-center nw-text-2xl
        md:nw-text-3xl
        nw-font-bold nw-pb-8 nw-pt-12
      "
        >
            Auf Schritt und Tritt informiert
        </p>
        <div class="nw-grid nw-grid-cols-1 md:nw-grid-cols-3">
            {{#each box}}
                <div class="nw-p-4">
                    <img class="nw-w-full nw-object-cover" src="{{this.src}}" alt=""/>
                    <p
                        class="nw-text-center md:nw-text-left nw-font-bold nw-text-lg nw-py-2"
                    >
                        {{this.title}}
                    </p>
                    <p class="nw-text-center md:nw-text-left nw-text-base">
                        {{this.caption}}
                    </p>
                </div>
            {{/each}}
        </div>
    </div>
</div>
