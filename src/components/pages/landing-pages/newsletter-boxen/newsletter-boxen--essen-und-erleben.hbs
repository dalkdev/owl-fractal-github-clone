<div class="nw-p-4 sm:nw-p-6 nw-bg-light-0 nw-border nw-border-gray-100 nw-rounded-md" style="max-width: 656px;">
  <div class=" nw-flex nw-flex-row nw-justify-between nw-gap-4">
    <div>
      <p class="nw-font-bold nw-text-base nw-text-gray-400 nw-pb-0.5"> Newsletter</p>
      <p class="nw-font-bold nw-text-lg nw-text-sky-300 nw-pb-2"> Essen & Erleben</p>
      <p class="nw-font-medium nw-text-sm sm:nw-text-base nw-pb-4 nw-text-gray-500">Jede Woche aktuelle Highlights aus
        Ihrer Region: die besten Restaurants, Cafés, Events und Trends. </p>
      <button id="showNewsletterBtn" class=" nw-text-center
      nw-min-w-26 sm:nw-max-w-fit nw-whitespace-nowrap nw-text-white
  nw-bg-red-0 nw-rounded-md nw-text-sm nw-font-bold
  nw-cursor-pointer nw-py-2 nw-px-4 hover:nw-bg-red-100 hover:nw-transition-all hover:nw-duration-300 focus:nw-bg-red-200 focus:nw-transition-all
  disabled:nw-bg-gray-500 disabled:nw-cursor-not-allowed">Jetzt anmelden
      </button>
    </div>

    <div class="nw-pl-8 nw-block">
      <div class="nw-newsletter-icon">
      </div>
    </div>
  </div>
  <!-- Hidden Div -->
  <div id="newsletterDiv" class="sm:nw-mt-4 " style="display: none;">
    <form id="newsletterForm" method="post">
      <div class=" nw-block sm:nw-flex nw-gap-3 nw-mb-4">
        <label for="email-address" class="nw-sr-only">E-Mail Adresse</label>
        <input
          type="email"
          name="email-address"
          id="email-address"
          autocomplete="email"
          required
          class="
          nw-appearance-none
          nw-min-w-0
          nw-w-full
          nw-bg-white
          nw-border
          nw-nw-border-transparent
          nw-rounded-md  focus:nw-outline-none
          focus:nw-ring-1
          focus:nw-ring-offset-1
          focus:nw-ring-offset-sky-0
          focus:nw-ring-sky-0
          focus:nw-border-sky-0
          nw-py-2 nw-px-3 nw-text-sm nw-font-medium nw-text-black nw-placeholder-gray-400 placeholder:nw-font-medium nw-mb-3 sm:nw-mb-0
        "
          placeholder="E-Mail-Adresse"
        />


        <button id="anmeldenNewsletter"
                type="submit"
                class="
          nw-text-center  nw-min-w-fit
           nw-whitespace-nowrap nw-text-white
          nw-bg-red-0 nw-rounded-md nw-text-sm nw-font-bold
          nw-cursor-pointer nw-py-2 nw-px-4 hover:nw-bg-red-100 hover:nw-transition-all hover:nw-duration-300 focus:nw-bg-red-200 focus:nw-transition-all
          disabled:nw-bg-gray-500 disabled:nw-cursor-not-allowed
          "
        >
          Jetzt anmelden
        </button>
      </div>
      <div id="formMessage" class="nw-my-2 nw-font-medium nw-text-xs sm:nw-text-sm"></div>
      <div class="nw-text-gray-300 nw-font-medium nw-text-xs">
        Mit meiner Anmeldung zum Newsletter stimme ich der <a href="#" class="nw-text-red-0 nw-underline">
        Werbevereinbarung </a> zu. Weitere Informationen finden Sie in der
        <a href="#" class="nw-underline">Datenschutzerklärung</a>.

        zu.
      </div>
    </form>
  </div>
</div>

<script>
  const showNewsletterBtn = document.getElementById('showNewsletterBtn');
  const newsletterDiv = document.getElementById('newsletterDiv');

  showNewsletterBtn.addEventListener('click', function() {
    newsletterDiv.style.display = 'block';
    showNewsletterBtn.style.display = 'none';
  });

</script>
