  @media (max-width: 639px) {
    .confirmation-loginbox {
      height: auto;
      width: 100% !important;
      border-radius: 24px 24px 0 0 !important;
      left: 0;
      right: 0;
      top: auto;
      bottom: 0 !important;
    }
  }
  @media (max-width: 639px) {
    @keyframes slideInLoginbox {
      from {
        transform: translate(0, 100%);
      }
      to {
        transform: translate(0, 0);
      }
    }

    @keyframes slideOutLoginbox {
      from {
        transform: translate(0, 0);
      }
      to {
        transform: translate(0%, 100%);
      }
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
