    if (!target) return;
    // Add a subtle fade effect during transition
    document.body.style.transition = 'opacity 0.3s ease-in-out';
    document.body.style.opacity = '0.95';
    setTimeout(() => {
      target.scrollIntoView({
        behavior: 'smooth',
        block: 'start'
      });
      // Restore opacity
      setTimeout(() => {
        document.body.style.opacity = '1';
      }, 300);
    }, 100);
  }
