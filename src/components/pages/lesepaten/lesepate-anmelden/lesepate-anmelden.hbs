<script>
    // patewerden Tabs

    // Tabs clicken
    var arrayPatenwerdenTabs = document.getElementsByClassName('patewerdenTabs');
    Array.prototype.forEach.call(arrayPatenwerdenTabs, (x, i) => {
        x.addEventListener('click', e => {
            e.preventDefault();
            Array.prototype.forEach.call(arrayPatenwerdenTabs, x => {
                x.querySelector('.bgChange').classList.remove('nw-bg-green-600');
                x.querySelector('.bgChange').classList.add('nw-bg-gray-200');
                x.querySelector('.textChange').classList.remove('text-black');
                x.querySelector('.textChange').classList.add('nw-text-gray-300');
            });
            x.querySelector('.bgChange').classList.remove('nw-bg-gray-200');
            x.querySelector('.bgChange').classList.add('nw-bg-green-600');
            x.querySelector('.textChange').classList.remove('nw-text-gray-300');
            x.querySelector('.textChange').classList.add('text-black');
            var arrayPatenwerdenContainer = document.getElementsByClassName('patewerdenContainer');
            Array.prototype.forEach.call(arrayPatenwerdenContainer, x => {
                x.classList.add('nw-hidden');
            });
            arrayPatenwerdenContainer[i].classList.remove('nw-hidden');
        });
    });
</script>

