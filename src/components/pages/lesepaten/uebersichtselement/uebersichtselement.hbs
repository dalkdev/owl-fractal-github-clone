<!--Slider -->
<div>
    <div class="nw-leadind-6 nw-text-center nw-px-4 nw-pb-6">
        <p class="nw-text-md nw-text-gray-600">Partner der Lesepaten</p>
        <p class="nw-text-2xl nw-font-bold">Unsere Sponsoren</p>
    </div>
    <div class="slider lesepaten nw-pl-4 sm:nw-pl-0 nw-bg-white">
        <div class="nw-mb-8">
            <div class="embla embla--main-carousel nw-mx-auto">
                <div class="embla__viewport relative">
                    <div class="embla__container nw-text-md">
                        {{#each images-slider}}
                            <div class="
                                            embla__slide
                                            nw-min-w-7/10
                                            md:nw-min-w-3/12">
                                <div class="embla__slide__inner nw-bg-clip-padding nw-block">
                                    <a href="javascript:void(0)" class="nw-cursor-pointer slider-Image">
                                        <div
                                            class="nw-aspect-w-16 nw-aspect-h-9 nw-bg-gray-100 nw-rounded-md">
                                            <img alt="image-slider"
                                                 class="    embla__slide__img
                                                                        nw-h-full nw-w-full
                                                                        nw-object-contain
                                                                        nw-rounded-md nw-px-2"
                                                 src={{src}}
                                            />
                                        </div>
                                    </a>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            <!-- Dots -->
            <div class="embla__dots"></div>
            <script type="text/template" id="embla-dot-template">
                <button class="embla__dot" type="button"></button>
            </script>
        </div>
    </div>
</div>
<!-- Slider Ende -->
