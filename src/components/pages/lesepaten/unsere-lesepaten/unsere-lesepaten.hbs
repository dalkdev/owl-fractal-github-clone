<div class="nw-lesepaten-table md:nw-w-5/6 nw-mx-auto nw-px-4 md:nw-px-0 nw-bg-white">
    <div class="nw-text-xl nw-font-bold nw-pt-0 md:nw-pt-6 nw-pb-4 md:nw-pb-8">
        Lesepaten im Ãœberblick
    </div>
    <div class="nw-flex nw-flex-col md:nw-flex-row md:nw-space-x-6">
        <div class="nw-grow">
            <div class=" nw-pb-3">
                <label for=""
                       class="nw-text-slate-300 nw-text-xs">
                    Suchen nach Name
                </label>
            </div>
            <div class="nw-relative nw-mb-4 nw-flex nw-w-full nw-items-stretch">
                <input
                    type="search"
                    class="nw-relative nw-placeholder-gray-200 nw-m-0 nw--mr-0.5 nw-block nw-min-w-0 nw-flex-auto nw-rounded-l nw-border
                        nw-border-solid nw-border-r-0 nw-border-gray-100 nw-bg-transparent nw-bg-clip-padding nw-px-3 nw-py-3 nw-text-sm
                        focus:nw-outline-none"
                    placeholder="Namen eingeben"
                    aria-label="Namen"
                    aria-describedby=""/>
                <button
                    class="nw-relative nw-z-10 nw-flex nw-items-center nw-rounded-r nw-px-3 nw-py-3
                        nw-border nw-border-solid nw-border-l-0"
                    type="button"
                    id="button-addon1"
                    data-te-ripple-init
                    data-te-ripple-color="light">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                        class="nw-h-5 nw-w-5">
                        <path
                            fill-rule="evenodd"
                            d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z"
                            clip-rule="evenodd"/>
                    </svg>
                </button>
            </div>
        </div>
        <div class="nw-grow">
            <div class=" nw-pb-3">
                <label for=""
                       class="nw-text-slate-300 nw-text-xs">
                    Stadt
                </label>
            </div>
            <div class="nw-relative nw-mb-4 nw-flex nw-w-full nw-items-stretch">
                <input
                    type="search"
                    class="nw-relative nw-placeholder-gray-200 nw-m-0 nw--mr-0.5 nw-block nw-min-w-0 nw-flex-auto nw-rounded-l nw-border
                        nw-border-solid nw-border-r-0 nw-border-gray-100 nw-bg-transparent nw-bg-clip-padding nw-px-3 nw-py-3 nw-text-sm
                        focus:nw-outline-none"
                    placeholder="Stadt eingeben"
                    aria-label="Stadt"
                    aria-describedby=""/>
                <button
                    class="nw-relative nw-z-10 nw-flex nw-items-center nw-rounded-r nw-px-3 nw-py-3
                        nw-border nw-border-solid nw-border-l-0"
                    type="button"
                    id="button-addon1"
                    data-te-ripple-init
                    data-te-ripple-color="light">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                        class="nw-h-5 nw-w-5">
                        <path
                            fill-rule="evenodd"
                            d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z"
                            clip-rule="evenodd"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>
    <!-- Table -->
    <table class="nw-table-fixed nw-w-full nw-text-sm nw-mb-10 nw-whitespace-nowrap">
        <thead>
        <tr class="nw-border-b nw-font-medium nw-text-left">
            <th class="nw-pl-0 nw-p-2">Lesepaten</th>
            <th class="nw-pl-4 nw-p-2">Stadt</th>
        </tr>
        </thead>
        <tbody>
        {{#each this.lesepaten-row}}
            <tr class="nw-border-b nw-text-left">
                <td class="nw-pl-0 nw-p-4 nw-flex nw-items-center">
                    <img
                        class="nw-w-8 nw-h-8 nw-mr-2 nw-rounded-full"
                        src="{{first-cell-src}}"
                        alt="{{first-cell-alt}}"
                    />
                    <span class="nw-overflow-hidden nw-text-ellipsis">{{first-cell}}</span>
                </td>
                <td class="nw-p-4 nw-align-middle">{{second-cell}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
    <!-- Table Ende -->
    <!--  Pagination -->
    <div
        class=" nw-mt-10 md:nw-mt-16 nw-mb-8 md:nw-mb-12 nw-flex nw-justify-start nw-border-t nw-border-gray-100 nw-bg-white nw-py-4 ">
        {{>@pagination}}
    </div>
    <!-- Pagination Ende -->
</div>