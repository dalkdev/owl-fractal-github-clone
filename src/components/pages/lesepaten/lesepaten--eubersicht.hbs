                                    <a href="javascript:void(0)" class="nw-cursor-pointer slider-Image">
                                        <div
                                            class="nw-aspect-w-16 nw-aspect-h-9 nw-bg-gray-200 nw-rounded-md">
                                            <img alt="image-slider"
                                                 class="    embla__slide__img
                                                                        nw-h-full nw-w-full
                                                                        nw-object-contain
                                                                        nw-rounded-md nw-px-2"
                                                 src={{src}}
                                            />
                                        </div>
                                    </a>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            <!-- Dots -->
