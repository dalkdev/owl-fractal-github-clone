<div class="nw-header-container">
  {{>@header-full--lokal}}
</div>
<div class="nw-mx-auto md:nw-mb-4" style="max-width: 1062px">
  <div class="nw-px-4 md:nw-px-7 nw-pt-6 nw-pb-10 md:nw-py-10 nw-bg-white md:nw-rounded-md md:nw-shadow-md">
    <div class="nw-mb-10">
      <p class="nw-text-xl md:nw-text-2xl nw-font-bold">
        Wir schreiben, redigieren und gestalten
      </p>
    </div>
    <div class="nw-grid nw-grid-rows-1 md:nw-grid-cols-2 nw-gap-6 md:nw-gap-8 nw-mb-6 md:nw-mb-8">
      <div class="nw-w-full">
        <div>
          <label for="" class="nw-text-xs nw-uppercase nw-font-bold">
            Name
          </label>
        </div>
        <div class="nw-relative  nw-flex nw-w-full nw-items-stretch nw-bg-white">
          <input
            type="search"
            class="nw-relative nw-placeholder-gray-200 nw-m-0 nw--mr-0.5 nw-block nw-min-w-0 nw-flex-auto nw-rounded-l nw-border
                        nw-border-solid nw-border-r-0 nw-border-gray-100 nw-bg-transparent nw-bg-clip-padding nw-px-3 nw-py-3 nw-text-sm
                        focus:nw-outline-none"
            placeholder="Bitte Namen eingeben ..."
            aria-label=""
            aria-describedby=""/>
          <button
            class="nw-relative nw-z-10 nw-flex nw-items-center nw-rounded-r nw-px-3 nw-py-3
                        nw-border nw-border-solid nw-border-l-0 nw-border-gray-100"
            type="button"
            id="button-addon1"
            data-te-ripple-init
            data-te-ripple-color="light">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              class="nw-h-5 nw-w-5 nw-text-gray-400">
              <path
                fill-rule="evenodd"
                d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z"
                clip-rule="evenodd"/>
            </svg>
          </button>
        </div>
      </div>
      <div class="nw-w-full">
        <div>
          <label for=""
                 class="nw-text-xs nw-uppercase nw-font-bold">
            Ressort und region
          </label>
        </div>
        <div class="nw-relative nw-bg-white  nw-w-full nw-items-stretch">
          <div>
            <select
              class="
            nw-w-full
            nw-px-2
            nw-py-2
            nw-mx-auto
            nw-text-sm
            nw-inline-block
            nw-border
            nw-rounded
            nw-box-border nw-border-gray-100
            nw-cursor-pointer"
              id=""
              name=""
            >
              <option value="" disabled selected hidden>Alle</option>
              <option value="">A</option>
              <option value="">B</option>
              <option value="">C</option>
              <option value="">D</option>
            </select>
          </div>
        </div>
      </div>
    </div>

    <!-- Buttons -->
    {{>@search-buttons}}
    <!-- Autoren-Liste -->
    <div>
      <div class="nw-bg-white nw-flex nw-flex-col nw-mb-11">
        {{>@autoren-liste}}
      </div>
      <div class="nw-flex nw-justify-center">
        <a href="#"
           class="nw-inline-flex nw-border nw-rounded-md nw-text-center nw-text-sm nw-font-bold nw-cursor-pointer nw-py-2 nw-px-4 hover:nw-bg-gray-0 focus:nw-bg-gray-100">
          Mehr laden
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="nw-w-4 nw-h-4 nw-ml-2">
            <path fill-rule="evenodd" d="M12 2.25a.75.75 0 0 1 .75.75v16.19l6.22-6.22a.75.75 0 1 1 1.06 1.06l-7.5 7.5a.75.75 0 0 1-1.06 0l-7.5-7.5a.75.75 0 1 1 1.06-1.06l6.22 6.22V3a.75.75 0 0 1 .75-.75Z" clip-rule="evenodd" />
            <path fill-rule="evenodd" d="M12 2.25a.75.75 0 0 1 .75.75v16.19l6.22-6.22a.75.75 0 1 1 1.06 1.06l-7.5 7.5a.75.75 0 0 1-1.06 0l-7.5-7.5a.75.75 0 1 1 1.06-1.06l6.22 6.22V3a.75.75 0 0 1 .75-.75Z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
    <!-- -->
  </div>
</div>