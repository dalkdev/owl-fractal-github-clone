{{>'@simple-loream'}}
<div class="nw-z-20 nw-w-full nw-left-0 nw-bottom-0 nw-fixed">
  <div
    class="nw-py-1 sm:nw-py-0 nw-plus-footer"
    style="background-color: rgb(0, 175, 203)"
  >
    <div class="nw-z-0 nw-absolute nw-w-full nw-flex nw-justify-center">
      <div
        style="background-color: rgb(0, 175, 203)"
        class="
          nw-inline-flex nw-cursor-pointer nw--mt-6
          nw-rounded-full
        "
        onclick="closefooter()"
      >
        <button class="nw-flex nw-items-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            class="nw-text-white nw-mx-3 nw-arrow-svg-footer"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M19 9l-7 7-7-7"
            />
          </svg>
        </button>
      </div>
    </div>
    <div
      class="
        nw-width-header nw-flex
        sm:nw-flex-row
        nw-justify-between
        nw-items-center
        nw-text-white
        nw-font-bold
        nw-py-1
        nw-pl-2
      "
      style="background-color: rgb(0, 175, 203)"
    >
      <div class="nw-z-10">
        <div class="nw-inline-block nw-align-middle nw-mr-1">
          {{>'@nw-plus-icon'}}
        </div>
        <div class="nw-inline-block nw-text-md ">{{caption}}</div>
      </div>
      <div
        class="
          nw-text-gray-100
          nw-flex nw-items-start nw-font-bold
          nw-justify-end nw-text-lg
          nw-cursor-pointer
          nw-px-2
          nw-close-footer nw-self-start
        "
      >
        Ã—
      </div>
    </div>
  </div>

  <div class="nw-bg-white">
    <div
      class="
        nw-transition-close nw-transition-open nw-overflow-hidden nw-body-footer
      "
    >
      <div
        class="
          nw-flex nw-flex-col
          sm:nw-flex-row
          nw-justify-between
          nw-bg-white
          nw-p-1
          nw-pl-2
          nw-items-center
        "
      >
        <div class="nw-font-bold nw-text-md nw-my-1">
          <div class="nw-list-none nw-text-center sm:nw-text-left">
            {{#each footeritems}}
            <li>{{this}}</li>
            {{/each}}
          </div>
        </div>
        <div
          class="nw-flex nw-justify-center sm:nw-justify-end nw-mb-2 sm:nw-mb-0"
        >
          <a href="#" class="nw-btn-primary-md nw-uppercase">
            {{buttonText}}
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  let bodyFooter = document.getElementsByClassName('nw-body-footer')[0];
  let svgFooter = document.getElementsByClassName('nw-arrow-svg-footer')[0];
  let closeFooter = document.getElementsByClassName('nw-close-footer')[0];
  let plusFooter = document.getElementsByClassName('nw-plus-footer')[0];

  let scroll = false;
  window.onscroll = function () {
    if (window.pageYOffset === 0 && scroll === true) {
      bodyFooter.style.maxHeight = '10rem';
      svgFooter.classList.remove('nw-transform', 'nw-rotate-180');
      toggletransition('nw-transition-open', 'nw-transition-close');
      scroll = false;
    } else if (window.pageYOffset !== 0 && scroll === false) {
      bodyFooter.style.maxHeight = '0px';
      svgFooter.classList.add('nw-transform', 'nw-rotate-180');
      toggletransition('nw-transition-close', 'nw-transition-open');
      scroll = true;
    }
  };

  function toggletransition(removetrans, addtrans) {
    bodyFooter.classList.remove(removetrans);
    bodyFooter.classList.add(addtrans);
  }

  function nwTransitionFooter() {
    if (bodyFooter.style.maxHeight === '10rem') {
      bodyFooter.style.maxHeight = '0px';
      toggletransition('nw-transition-close', 'nw-transition-open');
    } else {
      bodyFooter.style.maxHeight = '10rem';
      toggletransition('nw-transition-open', 'nw-transition-close');
    }
  }

  function closefooter() {
    nwTransitionFooter();
    if (svgFooter.classList.contains('nw-transform')) {
      svgFooter.classList.remove('nw-transform', 'nw-rotate-180');
    } else {
      svgFooter.classList.add('nw-transform', 'nw-rotate-180');
    }
  }

  document.addEventListener('DOMContentLoaded', function (event) {
    bodyFooter.style.maxHeight = '10rem';
  });

  closeFooter.addEventListener('click', function () {
    plusFooter.parentElement.style.display = 'none';
    bodyFooter.parentElement.style.display = 'none';
  });
</script>
