<div class="nw-py-4 nw-px-4 md:nw-flex md:nw-flex-row">
    <div class="nw-mr-0 md:nw-mr-4">
        <div class="nw-flex">
            <img class="nw-mr-1" src="{{logo}}" alt="" width="30" height="30"/>

            <span
                class="
          nw-uppercase nw-text-base
          sm:nw-text-md
          nw-font-medium nw-text-gray-600
        "
            >
                {{title}}
            </span>
        </div>
        <div class="nw-mt-1 nw-text-xl sm:nw-text-2xl nw-text-black nw-font-bold">
            {{caption}}
        </div>
    </div>
    <div class="nw-flex nw-flex-col sm:nw-flex-row nw-justify-between">
        <div
            class="
        nw-order-last
        md:nw-oder-first
        nw-max-h-36 nw-mt-4
        sm:nw-mt-0
        nw-overflow-hidden
      "
        >
            <img class="nw-mx-auto" src=" {{ipad-screen}}" alt=""/>
        </div>
        <div class="nw-order-first md:nw-order-last md:nw-mx-4">
            <a
                href=""
                class="
          nw-uppercase nw-mt-2
          sm:nw-mt-8
          md:nw-mt-8
          nw-bg-red-500
          nw-border
          nw-border-transparent
          nw-rounded-md
          nw-py-2
          nw-px-2
          nw-inline-flex
          nw-justify-center
          nw-text-base
          nw-shadow-md
          nw-font-bold
          nw-text-white
          hover:nw-bg-red-600
          focus:nw-outline-none
          focus:nw-ring-2
          focus:nw-ring-offset-2
          focus:nw-ring-offset-gray-800
          focus:nw-ring-indigo-500
        "
            >
                {{label}}
            </a>
        </div>
    </div>
</div>
