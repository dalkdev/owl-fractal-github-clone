<div class="nw-mb-3">
  <p class="nw-text-base nw-font-bold">Ihre Antwort</p>
</div>
<form>
  <div>
    <textarea
      rows="7"
      maxlength="3000"
      class="
        comment
        nw-w-full nw-text-sm
        focus:nw-ring-0 focus:nw-outline-none
        nw-overflow-hidden
        nw-py-1
        nw-px-2
        nw-bg-white
        nw-rounded-md
        nw-border
        nw-border-black
      "
      placeholder="Diskutieren Sie mit â€¦"
      required
    ></textarea>
    <p class="result nw-text-xs nw-text-gray-500">0/3000</p>
  </div>
  <div class="nw-text-right">
    <button
      type="submit"
      class="
        nw-inline-flex
        nw-bg-red-500
        nw-py-2
        nw-px-4
        nw-text-tiny
        nw-font-bold
        nw-text-center
        nw-text-white
        nw-rounded
      "
      disabled
    >
      Antworten
    </button>
  </div>
</form>
<script>
  var inputs = document.querySelectorAll('.comment');
  inputs.forEach(function (input) {
    input.addEventListener('keyup', function (e) {
      var counter = this.value.length;
      input.nextElementSibling.innerHTML = counter + '/3000';
      var parent = input.parentNode;
      var btn = parent.nextElementSibling.childNodes[1];
      if (counter == 0) {
        btn.disabled = true;
      } else {
        btn.disabled = false;
      }
    });
  });
</script>
