<style>

</style>
<div
  class="
    slider nw-trauer-slider nw-embla-trauer-gradient
    first-slide nw-p-4 md:nw-p-6
    nw-mb-10
    md:nw-mb-5
    nw-rounded-md
  "
  style="background-color: #F2F5F9; "
>
  <div class="nw-mb-10">
    <div class="nw-flex nw-flex-row nw-justify-between nw-items-end">
      <div>
        <div class="nw-inline text-lg md:nw-text-xl nw-uppercase nw-font-bold">
          <p>Trauer </p>
        </div>
        <hr class="nw-red-line-m nw-mt-0.5"/>
      </div>
      <div class="nw-text-gray-600 nw-text-sm nw-pl-3 hover:nw-text-gray-300 nw-cursor-pointer">
        <a href="https://trauer.nw.de/">
        Alle Traueranzeigen
        </a>
      </div>
    </div>
  </div>
  <div class="embla embla--main-carousel nw-mb-8">
    <div class="embla__viewport relative">
      <div class="embla__container ">
        <div
          class="
            embla__slide
            nw-min-w-full
            sm:min-w-4/10
            md:nw-min-w-4/10
            lg:nw-min-w-4/10
            xl:nw-min-w-3/10
          "
        >
          <div class="embla__slide__inner nw-bg-clip-padding nw-flex nw-justify-center sm:nw-justify-start">
            <div class="nw-mx-auto nw-rounded-lg" style="width: 300px; height: 250px; max-width: 300px; max-height: 250px; background-color: #ccc;">
              Hier könnte Ihre Werbung stehen.
            </div>
          </div>
        </div>

        {{#each images}}
          <div
            class="
            embla__slide
            nw-min-w-full
            sm:min-w-4/10
            md:nw-min-w-4/10
            lg:nw-min-w-4/10
            xl:nw-min-w-3/10
          "
          >
            <div class="embla__slide__inner nw-bg-clip-padding nw-flex nw-justify-center sm:nw-justify-start">
              <div class="nw-flex nw-flex-col sm:nw-flex-row nw-justify-center nw-items-center sm:nw-space-x-4">
                <a target="#" href="#" class="nw-mb-4 sm:nw-mb-0">
                  <div class="nw-flex nw-justify-center nw-items-center nw-bg-white nw-overflow-hidden nw-rounded-md trauer-container">
                    <img class="nw-w-auto nw-h-auto" style="max-width: 100%; max-height: 100%;"
                         loading="lazy"
                         src="{{trauer-img}}">
                  </div>
                </a>

                <div class="nw-text-center sm:nw-text-left">
                  <p class="nw-font-bold nw-text-md">{{trauer-title}}</p>
                  <p class="nw-text-gray-200 nw-text-base">{{trauer-first-date}}<br>{{trauer-second-date}}</p>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
      <button
        class="
          nw-hidden
          md:nw-block
          slider--button-prev
          nw-flex  nw-place-content-center
          nw-bg-white
          nw-text-black
          nw-w-8
          nw-h-8
          nw-absolute
          nw-rounded-full
          nw-object-center
          nw-top-1/2
          nw-left-0
          nw-transform
          nw--translate-y-1/2
          nw-cursor-pointer
        "
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="nw-w-4 nw-h-4 nw-mx-auto">
          <path fill-rule="evenodd" d="M11.78 5.22a.75.75 0 0 1 0 1.06L8.06 10l3.72 3.72a.75.75 0 1 1-1.06 1.06l-4.25-4.25a.75.75 0 0 1 0-1.06l4.25-4.25a.75.75 0 0 1 1.06 0Z" clip-rule="evenodd" />
        </svg>
      </button>
      <button
        class="
          nw-hidden
          md:nw-block
          slider--button-next
          nw-flex nw-place-content-center
          nw-bg-white
          nw-text-black
          nw-w-8
          nw-h-8
          nw-absolute
          nw-rounded-full
          nw-object-center
          nw-top-1/2
          nw-right-0
          nw-transform
          nw--translate-y-1/2
          nw-cursor-pointer
        "
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="nw-w-4 nw-h-4 nw-mx-auto">
          <path fill-rule="evenodd" d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
        </svg>
      </button>
    </div>
  </div>
  <div class="embla__dots"></div>
  <div class="nw-mx-auto nw-block md:nw-hidden" style="width: 96rem; height: 100px; max-width: 300px; max-height: 100px; background-color: #ccc;">
    Hier könnte Ihre Werbung stehen.
  </div>
  <div class="nw-mx-auto nw-hidden md:nw-block" style="width: 96rem; height: 90px; max-width: 728px; max-height: 90px; background-color: #ccc;">
    Hier könnte Ihre Werbung stehen.
  </div>
</div>
<script type="text/template" id="embla-dot-template">
  <button class="embla__dot" type="button"></button>
</script>