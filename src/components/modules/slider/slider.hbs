<div
    id="nw-embla-gradient"
    class="
    slider
    first-slide
    nw-bg-custom-1-700 nw-pb-6 nw-pt-6 nw-mb-6
    md:nw-mb-3
  "
>
    <div class="nw-pl-3 md:nw-pl-20">
        <div>
            <p class="nw-text-white nw-inline nw-text-xl nw-uppercase nw-font-bold">
                {{title}}
            </p>
            <hr class="nw-red-line-l nw-mt-0.5"/>
        </div>
        <div>
            <p
                class="
          nw-text-white nw-text-left nw-text-md
          md:nw-text-xl
          nw-pt-3 nw-pb-2 nw-pr-2
        "
            >
                {{caption}}
            </p>
        </div>
    </div>
    <div class="embla embla--main-carousel">
        <div class="embla__viewport relative">
            <div class="embla__container ">
                {{#each images}}
                    <div
                        class="
            embla__slide
            nw-min-w-8/10
            sm:min-w-7/10
            md:nw-min-w-6/10
            lg:nw-min-w-4/10
            xl:nw-min-w-3/10
          "
                    >
                        <div class="embla__slide__inner nw-bg-clip-padding nw-block">
                            <a href="javascript:void(0)" class="nw-cursor-pointer slider-Image">
                                <div class="nw-aspect-w-6 nw-aspect-h-4">
                                    <img
                                        class="
                    embla__slide__img
                    nw-h-full nw-w-full nw-object-cover nw-rounded-md
                  "
                                        src="{{src}}"
                                    />
                                </div>
                            </a>
                        </div>
                    </div>
                {{/each}}
            </div>

            <div
                class="
          nw-hidden
          md:nw-block
          slider--button-prev
          nw-flex
          nw-bg-black
          nw-text-white
          nw-w-8
          nw-h-8
          nw-absolute
          nw-rounded-full
          nw-object-center
          nw-top-1/2
          nw-left-3
          nw-transform
          nw--translate-y-1/2
          nw-cursor-pointer
        "
            >
                <img class="w-full" src="{{path '/images/arrow-left.svg'}}"/>
            </div>
            <div
                class="
          nw-hidden
          md:nw-block
          slider--button-next
          nw-flex
          nw-bg-black
          nw-text-white
          nw-w-8
          nw-h-8
          nw-absolute
          nw-rounded-full
          nw-object-center
          nw-top-1/2
          nw-right-3
          nw-transform
          nw--translate-y-1/2
          nw-cursor-pointer
        "
            >
                <img class="nw-w-full" src="{{path '/images/arrow-right.svg'}}"/>
            </div>
        </div>
    </div>
</div>
<div id="light1" class="light nw-mt-12 md:nw-mt-8 nw-opacity-80" data-lightbox="light1">
    <span class="close-lightbox cursor">&times;</span>
    <div class="light-content">
        {{#each images}}
            <div class="mySlides image-container">
                <img
                    src="{{src}}"
                    style="width:100%;">
            </div>
        {{/each}}

        <a class="prevButton">&#10094;</a>
        <a class="nextButton">&#10095;</a>

    </div>
</div>
