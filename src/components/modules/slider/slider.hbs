<div
    id="nw-embla-gradient nw-mt-6 nw-mb-10"
    class="
    slider
    first-slide
    nw-bg-custom-1-700 nw-pb-6 nw-pt-6 nw-mb-6
    md:nw-mb-3
  "
>
    <div class="nw-px-3 md:nw-px-7">
        <div class="nw-flex nw-flex-row nw-justify-between nw-items-end">
            <div>
                <p class="nw-text-white nw-inline nw-text-xl nw-uppercase nw-font-bold">
                    {{title}}
                </p>
                <hr class="nw-red-line-l nw-mt-0.5"/>
            </div>
            <div class="nw-text-gray-300 nw-text-sm nw-pl-3"><span class="photoCount" id="photoCount"></span>
                Bilder
            </div>
        </div>
        <div>
            <p
                class="
          nw-text-white nw-text-left nw-text-md nw-font-bol
          nw-pt-6 nw-pb-2 nw-pr-2
        "
            >
                {{caption}}
            </p>
        </div>
    </div>
    <div class="embla embla--main-carousel">
        <div class="embla__viewport relative">
            <div class="embla__container ">
                {{#each images}}
                    <div
                        class="
            embla__slide
            nw-min-w-8/10
            sm:min-w-7/10
            md:nw-min-w-6/10
            lg:nw-min-w-4/10
            xl:nw-min-w-3/10
          "
                    >
                        <div class="embla__slide__inner nw-bg-clip-padding nw-block">
                            <a href="{{src}}" class="nw-gallery-lightbox" data-glightbox="type: image" data-gallery="gallery1">
                                <div class="nw-aspect-w-6 nw-aspect-h-4">
                                    <img
                                        class="
                    embla__slide__img
                    nw-h-full nw-w-full nw-object-cover nw-rounded-md
                  "
                                        src="{{src}}"
                                    alt="image">
                                </div>
                            </a>
                        </div>
                    </div>
                {{/each}}
            </div>

            <div
                class="
          nw-hidden
          md:nw-block
          slider--button-prev
          nw-flex
          nw-bg-black
          nw-text-white
          nw-w-8
          nw-h-8
          nw-absolute
          nw-rounded-full
          nw-object-center
          nw-top-1/2
          nw-left-8
          nw-transform
          nw--translate-y-1/2
          nw-cursor-pointer
        "
            >
                <img class="w-full" src="{{path '/images/arrow-left.svg'}}"/>
            </div>
            <div
                class="
          nw-hidden
          md:nw-block
          slider--button-next
          nw-flex
          nw-bg-black
          nw-text-white
          nw-w-8
          nw-h-8
          nw-absolute
          nw-rounded-full
          nw-object-center
          nw-top-1/2
          nw-right-8
          nw-transform
          nw--translate-y-1/2
          nw-cursor-pointer
        "
            >
                <img class="nw-w-full" src="{{path '/images/arrow-right.svg'}}"/>
            </div>
        </div>
    </div>
</div>
