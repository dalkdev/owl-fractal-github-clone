<div class="nw-grid nw-grid-cols-1 md:nw-grid-cols-3 nw-gap-2">
  <div class="nw-slider-flex slider nw-bg-gray-200 nw-pb-4 nw-pt-6">
    <div class="nw-pl-4">
      <div>
        <p
          class="
            nw-text-gray-600
            nw-inline
            nw-text-lg
            nw-uppercase
            nw-font-bold
            nw-border-solid
            nw-border-red-500
            nw-border-b-2
          "
        >
          {{title}}
        </p>
      </div>
      <div>
        <p class="nw-text-gray-600 nw-text-left nw-text-base nw-pt-2 nw-pr-1">
          {{caption}}
        </p>
      </div>
    </div>
    <div class="embla embla--main-carousel nw-pl-0.5 md:nw-pl-0">
      <div class="embla__viewport relative">
        <div class="embla__container">
          {{#each images}}
          <div class="embla__slide">
            <div
              class="
                embla__slide__inner
                nw-bg-clip-padding nw-inline
                md:nw-block
              "
            >
              <a href="" class="nw-cursor-pointer">
                <div class="nw-aspect-w-4 nw-aspect-h-3">
                  <img
                    class="
                      k
                      embla__slide__img
                      nw-h-full nw-w-full nw-object-none nw-rounded-md
                    "
                    src="{{src}}"
                  />
                </div>
              </a>
              <div
                class="
                  nw-pt-2 nw-px-1 nw-text-gray-600 nw-font-medium nw-text-tiny
                "
              >
                {{caption}}
              </div>
            </div>
          </div>
          {{/each}}
        </div>

        <div
          class="
            nw-hidden
            md:nw-block
            slider--button-prev
            nw-flex
            nw-bg-black
            nw-text-white
            nw-w-8
            nw-h-8
            nw-absolute
            nw-rounded-full
            nw-object-center
            nw-top-28
            nw-left-2
            nw-transform
            nw--translate-y-1/2
            nw-cursor-pointer
          "
        >
          <img class="w-full" src="{{path '/images/arrow-left.svg'}}" />
        </div>

        <div
          class="
            nw-hidden
            md:nw-block
            slider--button-next
            nw-flex
            nw-bg-black
            nw-text-white
            nw-w-8
            nw-h-8
            nw-absolute
            nw-rounded-full
            nw-object-center
            nw-top-28
            nw-right-2
            nw-transform
            nw--translate-y-1/2
            nw-cursor-pointer
          "
        >
          <img class="nw-w-full" src="{{path '/images/arrow-right.svg'}}" />
        </div>
      </div>
    </div>

    <!-- Dots -->
    <div class="embla__dots nw-mt-0 sm:nw-mt-2"></div>
  </div>

