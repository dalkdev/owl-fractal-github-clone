        <div class="nw-pt-1 nw-text-lg nw-font-bold nw-text-center nw-text-black">
            {{newsletter}}
        </div>
        <div class="nw-text-base nw-text-center nw-text-black nw-pb-2">
            {{caption}}
        </div>
