            <label for="email-address" class="nw-sr-only">{{email.label}}</label>
            <input
                type="email"
                name="email-address"
                id="email-address"
                autocomplete="email"
                required
                class="
          nw-appearance-none
          nw-min-w-0
          nw-w-full
          nw-bg-white
          nw-border
          nw-nw-border-transparent
          nw-rounded-md
          sm:nw-rounded-none
          nw-rounded-l-md
