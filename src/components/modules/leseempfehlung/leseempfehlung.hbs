<div
    class="slider nw-leseempfehlung nw-bg-slate-300 nw-pb-2 nw-pt-1 nw-pl-2"
>
    <div>
        <p
            class="
        nw-text-white
        nw-text-lg
        nw-font-bold
        nw-pt-3
        nw-text-center
        nw-tracking-normal
        nw-text-opacity-100
      "
        >
            {{title}}
        </p>
    </div>
    <div class="nw-mb-1">
        <p
            class="
        nw-text-white
        nw-text-center
        nw-text-md
        nw-font-normal
        nw-tracking-normal
        nw-pb-8
        nw-text-opacity-100
        md:nw-pb-3
        nw-pr-1
      "
        >
            {{caption}}
        </p>
    </div>

    <div class="embla embla--main-carousel">
        <div class="embla__viewport relative">
            <div class="embla__container">
                {{#each images}}

                    <div
                        class="
            embla__slide
            nw-min-w-8/10
            sm:min-w-7/10
            md:nw-min-w-6/10
            lg:nw-min-w-4/10
            xl:nw-min-w-3/10
          "
                    >
                        <a href="" class="embla__slide__inner nw-rounded-md nw-block">
                            <div class="nw-aspect-w-16 nw-aspect-h-9">
                                <img
                                    class="
                  embla__slide__img
                  nw-h-full nw-w-full nw-object-none nw-rounded-t
                "
                                    src="{{src}}"
                                />
                            </div>

                            <div
                                class="
                nw-h-4/7
                nw-bg-white
                nw-pr-8
                nw-pl-4
                nw-pb-4
                nw-text-left
                nw-text-opacity-100
                nw-rounded-b
              "
                            >
                                <div
                                    class="
                  nw-pt-4
                  nw-text-xs
                  nw-uppercase
                  nw-font-normal
                  nw-text-black
                  nw-tracking-wider
                  nw-pr-4
                  nw-text-opacity-100
                "
                                >
                                    {{heading}}
                                </div>
                                <div
                                    class="
                  nw-pt-1
                  nw-text-lg
                  nw-text-black
                  nw-font-bold
                  nw-tracking-normal
                  nw-pr-4
                  nw-text-opacity-100
                "
                                >
                                    {{title}}
                                </div>
                                <div
                                    class="
                  nw-pt-1
                  nw-text-sm
                  nw-font-normal
                  nw-font-gray-500
                  nw-tracking-normal
                  nw-pr-4
                  nw-text-opacity-100
                "
                                >
                                    {{description}}
                                </div>
                                <div
                                    class="
                  nw-pt-3
                  nw-text-xs
                  nw-uppercase
                  nw-text-gray-600
                  nw-font-normal
                  nw-tracking-wider
                  nw-pr-4
                  nw-text-opacity-100
                "
                                >
                                    {{autor}}
                                </div>
                                <div
                                    class="
                  nw-text-base
                  nw-text-gray-600
                  nw-font-normal
                  nw-font-medium
                  nw-pr-4
                  nw-text-opacity-100
                "
                                >
                                    {{name}}
                                </div>
                            </div>
                        </a>
                    </div>
                {{/each}}
            </div>

            <!-- Dots -->
            <div class="embla__dots"></div>
            <script type="text/template" id="embla-dot-template">
                <button class="embla__dot" type="button"></button>
            </script>
        </div>
    </div>
</div>
