<div
  class="
    slider
    nw-bg-custom-1-700 nw-pb-4 nw-pt-6 nw-pl-2
    md:nw-pb-4 md:nw-pl-24
  "
>
  <div>
    <p
      class="
        nw-text-white
        nw-text-xl
        nw-font-bold
        nw-text-roboto
        nw-pt-3
        nw-text-center
      "
    >
      {{title}}
    </p>
  </div>
  <div>
    <p
      class="
        nw-text-white nw-text-center nw-text-base nw-text-normal nw-pb-8
        md:nw-pb-1
        nw-pr-1
      "
    >
      {{caption}}
    </p>
  </div>

  <div class="embla embla--main-carousel nw-mt-5">
    <div class="embla__viewport relative">
      <div class="embla__container">
        {{#each images}}

        <div class="embla__slide">
          <div
            class="embla__slide__inner nw-bg-clip-padding nw-inline md:nw-block"
          >
            <div
              class="
                nw-aspect-w-16 nw-aspect-h-9
                md:nw-aspect-h-3 md:nw-aspect-w-4
              "
            >
              <img
                class="
                  embla__slide__img
                  nw-h-full nw-w-full nw-object-none nw-rounded-t-md
                "
                src="{{src}}"
              />
            </div>
          </div>
          <div
            class="
              nw-h-4/7
              nw-bg-white
              nw-pr-8
              nw-pl-4
              nw-pb-4
              nw-text-left
              nw-rounded-b-md
            "
          >
            <div
              class="
                nw-pt-4
                nw-text-xs
                nw-uppercase
                nw-font-roboto
                nw-font-normal
                nw-tracking-wider
                nw-pr-4
              "
            >
              {{heading}}
            </div>
            <div
              class="
                nw-pt-1
                nw-text-lg
                nw-font-roboto
                nw-font-normal
                nw-font-bold
                nw-tracking-normal
                nw-pr-4
              "
            >
              {{title}}
            </div>
            <div
              class="
                nw-pt-1
                nw-text-sm
                nw-font-roboto
                nw-font-normal
                nw-font-medium
                nw-tracking-normal
                nw-pr-4
              "
            >
              {{description}}
            </div>
            <div
              class="
                nw-pt-3
                nw-text-xs
                nw-uppercase
                nw-font-roboto
                nw-text-gray-700
                nw-font-normal
                nw-tracking-wider
                nw-pr-4
              "
            >
              {{autor}}
            </div>
            <div
              class="
                nw-text-tiny
                nw-font-roboto
                nw-text-tiny
                nw-text-gray-700
                nw-font-normal
                nw-font-medium
                nw-pr-4
              "
            >
              {{name}}
            </div>
          </div>
        </div>
        {{/each}}
      </div>

      <!-- Dots -->
      <div class="embla__dots"></div>
      <script type="text/template" id="embla-dot-template">
        <button class="embla__dot" type="button"></button>
      </script>
    </div>
  </div>
</div>
