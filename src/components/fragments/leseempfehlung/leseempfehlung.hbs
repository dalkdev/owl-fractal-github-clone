<div
  class="
    slider
    nw-bg-custom-1-700 nw-pb-4 nw-pt-6 nw-pl-2
    md:nw-pb-4 md:nw-pl-24
  "
>
  <div>
    <p
      class="
        nw-text-white
        nw-text-xl
        nw-font-bold
        nw-text-roboto
        nw-pt-3
        nw-text-center
      "
    >
      {{title}}
    </p>
  </div>
  <div>
    <p
      class="
        nw-text-white nw-text-center nw-text-base nw-text-normal nw-pb-8
        md:nw-pb-1
        nw-pr-1
      "
    >
      {{caption}}
    </p>
  </div>

  <div class="embla embla--main-carousel">
    <div class="embla__viewport relative">
      <div class="embla__container">
        {{#each images}}

        <div class="embla__slide">
          <div
            class="embla__slide__inner nw-bg-clip-padding nw-inline md:nw-block"
          >
            <div
              class="
                nw-aspect-w-16 nw-aspect-h-9
                md:nw-aspect-h-3 md:nw-aspect-w-4
              "
            >
              <img
                class="embla__slide__img nw-h-full nw-w-full nw-object-none"
                src="{{src}}"
              />
            </div>
          </div>
          <div class="nw-h-70 nw-bg-white nw-pr-8 nw-pl-4">
            <div class="nw-pt-4">{{caption}}</div>
            <div class="nw-pt-4">{{caption}}</div>
            <div class="nw-pt-4"></div>
          </div>
        </div>
        {{/each}}
      </div>

