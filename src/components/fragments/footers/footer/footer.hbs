<footer class="nw-bg-gray-800" aria-labelledby="footer-heading">
  <h2 id="footer-heading" class="nw-sr-only">Footer</h2>
  <div
    class="
      nw-max-w-7xl nw-mx-auto nw-py-12 nw-px-4
      sm:nw-px-6
      lg:nw-py-8 lg:nw-px-8
    "
  >
    <div class="xl:nw-grid xl:nw-grid-cols-3 xl:nw-gap-8">
      <div class="nw-grid nw-grid-cols-2 nw-gap-8 xl:nw-col-span-2">
        <div class="md:nw-grid md:nw-grid-cols-2 md:nw-gap-8">
          <div>
            {{>'@footer-headline'}}
            <div class="nw-flex nw-flex-col nw-gap-2 nw-pt-4">
              <img src="/images/label_google-play@2x.png" />
              <img src="/images/label-appstore@2x.png" />
            </div>
          </div>
          <div class="nw-mt-12 md:nw-mt-0">
            {{#with columns}} {{>'@footer-headline' second}}
            {{>'@footer-section' second}} {{/with}}
          </div>
        </div>
        <div class="md:nw-grid md:nw-grid-cols-2 md:nw-gap-8">
          <div>
            {{#with columns}} {{>'@footer-headline' third}} {{>'@footer-section'
            third}} {{/with}}
          </div>
          <div class="nw-mt-12 md:nw-mt-0">
            {{#with columns}} {{>'@footer-headline' fourth}}
            {{>'@footer-section' fourth}} {{/with}}
          </div>
        </div>
      </div>
      <div class="nw-mt-8 xl:nw-mt-0">
        {{>@footer-headline columns.fifth}}
        <p class="nw-mt-4 nw-text-base nw-text-white">
          {{columns.fifth.menuitems.[0].menuitem}}
        </p>
        <form
          class="nw-mt-4 sm:nw-flex sm:nw-max-w-md nw-flex nw-flex-col nw-gap-2"
        >
          {{>@input--email (contextData '@input')}}
          <div class="nw-rounded-md sm:nw-flex-shrink-0">
            {{>'@submit-button' submitButton}}
          </div>
        </form>
      </div>
    </div>
    <div
      class="
        nw-mt-8 nw-border-t nw-border-gray-700 nw-pt-8
        md:nw-flex md:nw-items-center md:nw-justify-between
      "
    >
      <p class="nw-mt-8 nw-text-sm nw-text-gray-400 md:nw-mt-0 md:nw-order-0">
        {{copyright}}
      </p>
      <div class="nw-flex nw-justify-end nw-gap-1">
        {{>'@social-media-button' socialmedia.instagram}}
        {{>'@social-media-button' socialmedia.facebook}}
        {{>'@social-media-button' socialmedia.twitter}}
      </div>
    </div>
  </div>
</footer>
