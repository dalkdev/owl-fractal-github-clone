<div class="nw-max-h-full md:nw-max-h-28">
  <div class="nw-my-4 nw-mx-4 nw-block md:nw-flex">
    <div class="nw-mr-0 md:nw-mr-2">
      <div class="nw-flex">
        <img class="nw-mr-1" src="{{logo}}" alt="" width="30" height="30" />

        <span
          class="
            nw-uppercase
            nw-text-lg
            nw-text-gray-600
            nw-font-normal
            nw-text-center
          "
        >
          {{title}}
        </span>
      </div>
      <div class="nw-mt-1 nw-text-2xl nw-text-black nw-font-bold nw-text-left">
        {{caption}}
      </div>
    </div>
    <div>
      <img
        class="nw-mx-auto nw-mt-4 md:nw-mt-0"
        src=" {{ipad-screen}}"
        alt=""
      />
    </div>
    <div>
      <a
        href=""
        class="
          nw-uppercase nw-mt-0
          md:nw-mt-9
          nw-w-full
          nw-bg-red-500
          nw-border
          nw-border-transparent
          nw-rounded-md
          nw-py-2
          nw-px-3
          nw-flex
          nw-items-center
          nw-justify-center
          nw-text-base
          nw-shadow-md
          nw-font-bold
          nw-text-white
          hover:nw-bg-red-600
          focus:nw-outline-none
          focus:nw-ring-2
          focus:nw-ring-offset-2
          focus:nw-ring-offset-gray-800
          focus:nw-ring-indigo-500
        "
      >
        {{label}}
      </a>
    </div>
  </div>
</div>
