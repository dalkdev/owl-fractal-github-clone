{{#each artikel-box}}
<div
  class="
    nw-text-black
    nw-text-center
    nw-uppercase
    nw-mx-2
    nw-py-3
    nw-text-xl
    nw-font-bold
    nw-mt-6
  "
>
  Weitere Arminia Artikel
</div>

<div
  class="nw-mx-2 nw-block md:nw-flex nw-grid nw-grid-cols-1 md:nw-grid-cols-1"
>
  <div
    class="
      nw-grid nw-grid-cols-1
      md:nw-grid-cols-2
      nw-rounded-lg
      nw-overflow-hidden
      nw-bg-white
      nw-bg-origin-padding
      nw-bg-no-repeat
      nw-shadow-md
    "
  >
    <div>
      <div class="nw-aspect-w-16 nw-aspect-h-9">
        <img
          class="nw-object-cover nw-w-full nw-opacity-1"
          src="{{this.image-src-m}}"
        />
      </div>
    </div>
    <div class="nw-p-2">
      {{>@banner}}
      <div>
        <p
          itemprop="headline"
          class="
            nw-text-xl
            md:nw-text-xl
            nw-tracking-normal
            nw-text-left
            nw-font-bold
            nw-text-black
            nw-leading-tight
          "
        >
          {{this.headline}}
        </p>
      </div>
    </div>
  </div>
</div>
{{/each}}
<!-- -->
