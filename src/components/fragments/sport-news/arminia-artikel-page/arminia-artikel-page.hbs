<div
  class="
    nw-mt-2 nw-grid nw-grid-cols-1
    sm:nw-grid-cols-1
    md:nw-grid-cols-2
    lg:nw-grid-cols-3
  "
>
  {{#each artikelcontainer-box}}
  <div class="nw-mx-2 nw-my-1 nw-rounded-md nw-bg-white nw-shadow-md">
    <a href="">
      <div class="nw-flex nw-justify-between nw-my-2">
        <div class="nw-ml-2 nw-mr-1 nw-text-sm nw-text-gray-500 nw-max-w-sm">
          {{this.title-box}} <br />
          <span class="nw-text-black nw-text-base nw-font-bold">
            {{this.caption-box}}</span
          >
        </div>
        <img
          src=" {{this.img-box}}"
          class="nw-mr-2 nw-min-h-20 nw-max-h-20 nw-max-w-28 nw-min-w-28"
          loading=""
          alt=""
        />
      </div>
    </a>
  </div>
  {{/each}}
</div>
