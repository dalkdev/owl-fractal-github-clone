<div class="nw-bg-white nw-pb-4 nw-mx-0 nw-px-4 sm:nw-px-32">
  <div>
    <p
      class="
        nw-text-left
        nw-text-base
        nw-font-roboto
        nw-font-bold
        nw-opacity-100
        nw-text-black
        nw-pt-4
        nw-pb-1
        nw-tracking-normal
      "
    >
      {{headline}}
    </p>
  </div>

  <div id="">
    <div class=""></div>
    <div class="nw-max-w-full nw-mb-6 nw-bg-white">
      <div
        class="
          nw-flex
          nw-justify-center
          nw-content-center
          nw-mb-1
          nw-ml-auto
          nw-mr-auto
        "
      >
        <div
          class="
            nw-mt-6
            nw-bg-gray-600
            nw-relative
            nw-text-white
            nw-text-center
            nw-w-10
            nw-h-10
            nw-rounded-full
            nw-flex
            nw-content-center
            nw-justify-center
          "
        >
          <span
            style="transform: translateY(-50%)"
            class="nw-absolute nw-top-2/4"
            >FW</span
          >
        </div>
      </div>
      <div
        class="
          nw-px-4
          nw-font-bold
          nw-font-roboto
          nw-text-black
          nw-text-base
          nw-tracking-normal
          nw-text-center
        "
      >
        Willkommen,
        <br />
        {{name}}
      </div>
    </div>
  </div>
  <!-- box -->
  <div class="nw-grid nw-grid-cols1 md:nw-grid-cols-2 md:nw-mt-2 md:nw-gap-4">
    <!-- box1 -->
    <div class="nw-w-full nw-bg-gray-100 nw-rounded-md">
      <div
        class="
          nw-uppercase
          nw-px-2
          nw-py-2
          nw-text-sm
          nw-font-roboto
          nw-font-bold
          nw-text-black
          nw-tracking-normal
          nw-text-left
        "
      >
        Persönliche Daten
      </div>
      <hr />
      <div
        class="
          nw-px-2
          nw-pt-2
          nw-flex
          nw-text-left
          nw-font-roboto
          nw-text-black
          nw-tracking-normal
        "
      >
        <p class="nw-font-medium nw-text-sm">Kundennummer:</p>
        <p class="nw-text-sm nw-font-normal">&nbsp {{number}}</p>
      </div>
      <div
        class="
          nw-px-2
          nw-flex
          nw-text-left
          nw-font-roboto
          nw-text-black
          nw-tracking-normal
        "
      >
        <p class="nw-font-medium nw-text-sm">Benutzname:</p>
        <p class="nw-text-sm nw-font-normal">&nbsp {{username}}</p>
      </div>
      <div class="nw-px-2 nw-pt-2 nw-pb-2">
        <p
          class="
            nw-text-sm
            nw-font-normal
            nw-text-left
            nw-font-roboto
            nw-text-black
            nw-tracking-normal
          "
        >
          {{name}}
        </p>
        <p
          class="
            nw-text-sm
            nw-font-normal
            nw-text-left
            nw-font-roboto
            nw-text-black
            nw-tracking-normal
          "
        >
          {{email}}
        </p>
      </div>
      <div class="nw-mx-2">
        <a
          href=""
          class="
            nw-mt-1
            nw-mb-4
            nw-w-full
            nw-text-white
            nw-bg-gray-600
            nw-rounded
            nw-text-center
            nw-inline-block
            nw-text-tiny
            nw-font-roboto
            nw-tracking-normal
            nw-font-bold
            nw-cursor-pointer
            nw-py-1
            nw-px-auto
            hover:nw-bg-gray-700
          "
          type="button"
        >
          Persönliche Daten ändern
        </a>
      </div>
    </div>
    <!-- box2 and end of the box1 -->
    <div
      class="
        nw-w-full nw-bg-gray-100 nw-rounded-md nw-mt-4
        md:nw-mt-0
        nw-flex nw-flex-col nw-justify-between
      "
    >
      <div>
        <div
          class="
            nw-uppercase
            nw-px-2
            nw-py-2
            nw-text-sm
            nw-font-roboto
            nw-font-bold
            nw-text-black
            nw-tracking-normal
            nw-text-left
          "
        >
          Adresse
        </div>
        <hr />
        <div
          class="
            nw-py-2
            nw-mb-1
            nw-px-2
            nw-text-left
            nw-font-roboto
            nw-text-sm
            nw-text-black
            nw-tracking-normal
            nw-font-normal
          "
        >
          {{name}} <br />
          {{street}}<br />
          {{zipcode}} <br />{{land}}
        </div>
      </div>

      <div class="nw-mx-2">
        <a
          href=""
          class="
            nw-mt-2
            nw-mb-4
            nw-w-full
            nw-text-white
            nw-bg-gray-600
            nw-rounded
            nw-text-center
            nw-inline-block
            nw-text-tiny
            nw-font-roboto
            nw-tracking-normal
            nw-font-bold
            nw-cursor-pointer
            nw-py-1
            nw-px-auto
            hover:nw-bg-gray-700
          "
          type="button"
        >
          Persönliche Daten ändern
        </a>
      </div>
    </div>
    <!-- end of the box2-->
  </div>
  <!-- end of the box-->
</div>
