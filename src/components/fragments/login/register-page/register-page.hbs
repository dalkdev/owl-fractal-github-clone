<script>
  function checkFunction() {
    var checkBox1 = document.getElementById('checkCondition1');
    var checkBox2 = document.getElementById('checkCondition2');
    var bRegister = document.getElementById('registerButton');
    if (
      checkBox1.checked == true &&
      (checkBox2.checked == true || checkBox2.checked == false)
    ) {
      bRegister.disabled = false;
      bRegister.style.backgroundColor = '#D20A11';
    } else {
      bRegister.disabled = true;
      bRegister.style.backgroundColor = '#E1B9BA';
    }
  }
</script>

<script>
  function onClickRegistrieren() {
    var valid = Validator();
    if (valid) alert('ok');
  }

  function Validator() {
    var gender = document.getElementById('anrede');
    var fname = document.getElementById('vname');
    var lname = document.getElementById('nname');
    var street = document.getElementById('strasse');
    var hnumber = document.getElementById('hnummer');
    var zip = document.getElementById('plz');
    var land = document.getElementById('ort');
    var email = document.getElementById('eMail');
    var password = document.getElementById('passwort');

    var hide1 = document.getElementById('anredeT');
    var hide2 = document.getElementById('vnameT');
    var hide3 = document.getElementById('nnameT');
    var hide4 = document.getElementById('strasseT');
    var hide5 = document.getElementById('hnummerT');
    var hide6 = document.getElementById('plzT');
    var hide7 = document.getElementById('ortT');
    var hide8 = document.getElementById('eMailT');
    var hide9 = document.getElementById('passwortT');

    var valid = true;

    if (gender.value == '') {
      valid = false;
      gender.classList.add('nw-border-red-500');
      hide1.style.display = 'block';
    } else {
