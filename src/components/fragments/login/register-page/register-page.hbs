      hide3.style.display = 'none';
    }
    if (street.value == '') {
      valid = false;
      street.classList.add('nw-border-red-500');
      hide4.style.display = 'block';
    } else {
      street.classList.remove('nw-border-red-500');
      hide4.style.display = 'none';
    }

    if (hnumber.value == '') {
      valid = false;
      hnumber.classList.add('nw-border-red-500');
      hide5.style.display = 'block';
    } else {
      hnumber.classList.remove('nw-border-red-500');
      hide5.style.display = 'none';
    }
    if (zip.value == '') {
      valid = false;
      zip.classList.add('nw-border-red-500');
      hide6.style.display = 'block';
    } else {
      zip.classList.remove('nw-border-red-500');
      hide6.style.display = 'none';
