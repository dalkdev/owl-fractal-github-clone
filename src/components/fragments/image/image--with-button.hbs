<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<div class="nw-bg-white md:nw-p-4">
  <div class="nw-relative">
    <div class="nw-aspect-w-16 nw-aspect-h-9">
      <img
        class="nw-object-cover nw-h-full nw-w-full md:nw-rounded-md"
        src="/images/arminia-angebot/img-live-ticker.jpg"
      />
    </div>
    <button
      class="
        nw-absolute
        nw-bottom-2
        nw-right-2
        nw-w-8
        nw-h-8
        nw-border
        nw-border-white
        nw-rounded
        nw-bg-black
      "
      onclick="arrow()"
    >
      <svg
        id="svg"
        xmlns="http://www.w3.org/2000/svg"
        class="nw-text-white nw-m-1 nw-cursor-pointer"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19 9l-7 7-7-7"
        />
      </svg>
    </button>
  </div>
  <div id="paragraph" class="nw-text-sm nw-hidden margin-text">
    Per Handy verbunden: Mehr als 120 Menschen haben sich in einer
    Telegram-Gruppe vernetzt, die von einer Bünderin administriert wird. | ©
    Florian Weyand
  </div>
</div>

<script>
  function arrow() {
    $('#paragraph').slideToggle(500);
    // var x = document.getElementById("paragraph");
    var arrow = $('#svg').toggleClass('nw-rotate-180');
    if (arrow.hasClass('nw-transform')) {
      arrow.removeClass('nw-transform');
    } else {
      arrow.addClass('nw-transform');
    }
  }
</script>
