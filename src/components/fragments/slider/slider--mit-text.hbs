<div class="slider nw-slider-text nw-bg-gray-200 nw-pb-4 nw-pt-6">
  <div class="nw-pl-4 md:nw-pl-20">
    <div>
      <p
        class="
          nw-text-gray-600
          nw-inline
          nw-text-xl
          nw-uppercase
          nw-font-bold
          nw-text-roboto
          nw-border-solid
          nw-border-red-500
          nw-border-b-2
          nw-pt-6
        "
      >
        {{title}}
      </p>
    </div>
    <div>
      <p
        class="
          nw-text-gray-600 nw-text-left nw-text-base nw-tracking-normal
          md:nw-text-xl
          nw-font-normal nw-pt-2
          md:nw-pb-1
          nw-pr-1
        "
      >
        {{caption}}
      </p>
    </div>
  </div>
  <div class="embla embla--main-carousel nw-pl-0.5 md:nw-pl-0">
    <div class="embla__viewport relative">
      <div class="embla__container">
        {{#each images}}
        <div class="embla__slide">
          <div
            class="embla__slide__inner nw-bg-clip-padding nw-inline md:nw-block"
          >
            <div class="nw-aspect-w-4 nw-aspect-h-3">
              <img
                class="
                  embla__slide__img
                  nw-h-full nw-w-full nw-object-none nw-rounded-md
                "
                src="{{src}}"
              />
            </div>
            <div
              class="
                nw-pt-2 nw-px-1 nw-text-gray-600 nw-font-medium nw-text-tiny
              "
            >
              {{this.caption}}
            </div>
          </div>
        </div>
        {{/each}}
      </div>

      <div
        class="
          nw-hidden
          md:nw-block
          slider--button-prev
          nw-flex
          nw-bg-black
          nw-text-white
          nw-w-8
          nw-h-8
          nw-absolute
          nw-rounded-full
          nw-object-center
          nw-top-28
          md:nw-top-32
          lg:
          nw-left-2 nw-transform nw--translate-y-1/2 nw-cursor-pointer
        "
      >
        <img class="w-full" src="{{path '/images/arrow-left.svg'}}" />
      </div>

      <div
        class="
          nw-hidden
          md:nw-block
          slider--button-next
          nw-flex
          nw-bg-black
          nw-text-white
          nw-w-8
          nw-h-8
          nw-absolute
          nw-rounded-full
          nw-object-center
          nw-top-28
          md:nw-top-32
          lg:
          nw-right-2 nw-transform nw--translate-y-1/2 nw-cursor-pointer
        "
      >
        <img class="nw-w-full" src="{{path '/images/arrow-right.svg'}}" />
      </div>
    </div>
  </div>

  <!-- Dots -->
  <div class="embla__dots nw-mt-0 sm:nw-mt-2"></div>
  <script type="text/template" id="embla-dot-template">
    <button class="embla__dot" type="button"></button>
  </script>
</div>
